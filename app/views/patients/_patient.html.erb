<div id="<%= dom_id patient %>">
  <div class="inline-grid grid-cols-2 gap-1">
    <div><strong>Name:</strong></div>
    <div class="mb-2"><%= patient.name %></div>

    <div><strong>Age:</strong></div>
    <div class="mb-2"><%= patient.age %></div>

    <div><strong>Gender:</strong></div>
    <div class="mb-2"><%= patient.gender %></div>

    <div><strong>Email:</strong></div>
    <div class="mb-2"><%= patient.email %></div>

    <div><strong>Mobile:</strong></div>
    <div class="mb-8"><%= patient.mobile %></div>
  </div>

  <% if action_name != "show" %>
    <%= link_to "Show this patient", patient, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this patient", edit_patient_path(patient), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
