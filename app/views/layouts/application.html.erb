<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:page_title).present? ? yield(:page_title) : 'PMT Tracker' %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= favicon_link_tag 'pmt_tracker_logo.png' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <main>
      <%= render partial: 'layouts/navbar' %>
      <%= render partial: 'layouts/sidebar' if current_user %>
      <%= flash[:alert] %>
      <%= flash[:notice] %>

      <div class="<%= current_user ? 'p-4 sm:ml-64' : 'p4' %>">
         <div class="p-4 mt-20">
          <%= yield %>
         </div>
      </div>
    </main>
  </body>
</html>
